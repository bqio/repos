{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Repos",
  "version": "0.2.1",
  "identifier": "ru.repos.stable",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Repos",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "maximized": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Repos Corp.",
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENDMjEyRTcyOTVDRUIwNTAKUldSUXNNNlZjaTRoek9lcjRrOU5DT0tsTUx4cUQ4WWZ6YUgrN2FEK3JLOWVKdm9sNk1veVZPSEEK",
      "endpoints": [
        "https://github.com/bqio/repos/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
